<%= image_tag "stylo.jpg", :alt=>"", :id=>"stylo" %>
<%= image_tag "gimLogo.png", :alt=>"", :id=>"gimmelogo" %>

<div id="startcom">

</div>

<div id="topheader">

    <div class="topmenu_area"><a href="/" class="home">Home</a> <a href="/about" class="about">About</a> <a href="/contact" class="search">Contact</a> </div>
    <div class="banner_textarea">
        <p class="banner_head">GimmeSupport is a web application that allows companies to effectively provide product support to their customers. </p>
        <p>Customers get fast response to their product usage questions.</p>
    </div>
    <div class="search_menu_banner">
        <div class="search_background">
            <div class="searchname">Search</div>
            <div class="searchbox">
                <form method="post" action="/communities/find">
                    <input name="companyname" type="text" class="searchtextbox" placeholder="       search company" />
                    <input type="submit" id="search-submit" class="go" value="GO" name="submitcompany" />
                </form>
            </div>

        </div>
    </div>

</div>

<div id="body_area">

    <div id="wrapper">

        <div class="slider-wrapper theme-default">

            <div id="slider" class="nivoSlider">
                <%= image_tag "toystoryx.jpg", :alt=>"", :id=>"stylo" %>
                <%= image_tag "toystorycx.jpg", :alt=>"", :id=>"stylo" %>

            </div>

        </div>
    </div>
    <script type="text/javascript">
        jQuery.noConflict();
        $(window).load(function() {
                $('#slider').nivoSlider();
                });
    </script>
</div>

<div id="fotter">

    <div class="fotter_links">
        <%= link_to "Home",  "/", :class=>"fotterlink" %>
        |
        <%= link_to "About Us",  "/about", :class=>"fotterlink" %>
        |
        <%= link_to "Contact Us",  "/contact", :class=>"fotterlink" %>
        |
        <a href="#" class="fotterlink">Our Goals</a>
    </div>
</div>
