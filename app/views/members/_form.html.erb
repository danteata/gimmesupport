<%=form_for(@member, :html => { :multipart => true }, :validate => true) do |f| %>
  <br/>
  <div class="field">
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>

  <br/>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">

  <br/>

    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <br/>

  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <br/>

  <div class="field">
    <%= f.submit "Register" %>
  </div>
<% end %>
